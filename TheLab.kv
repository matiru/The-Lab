GridLayoutExample:

<GridLayoutExample@GridLayout>:
    rows:2
    cols:3
    Button:
        text:'A'
        size_hint:.5,1
    BoxLayout:
        size_hint: .20,.20

        Button:
            text:'A'


        Button:
            text:'B'
    Button:
        text:'c'

    BoxLayout:
        orientation : 'horizontal'
        spacing : '10dp'
        Button:
            text : 'B1'
        Button:
            text : 'B2'
        Button:
            text : 'B3'
        Button:
            text : 'B4'
    Button:
        text:'d'
        size_hint:.5,1
    Button:
        text:'e'

    Button:
        text:'f'





<AnchorLayoutExample>:
    #right,left,center
    anchor_x:'left'
    #bottom ,top,center
    anchor_y:'top'
    BoxLayout:
        size_hint: .20,.20

        Button:
            text:'A'


        Button:
            text:'B'


<BoxLayoutExample>:
    orientation : 'vertical'
    spacing : '10dp'
    Button:
        text : 'A'
        size_hint: .5,None
        #width : "100dp"
        height : "60dp"
        # x,center_x,right
        # y,center_y,top
        #pos_hint:{'x':.5,}
        #pos_hint:{'right':.5,}
        pos_hint:{'center_x':.5,}
    BoxLayout:
        orientation : 'horizontal'
        spacing : '10dp'
        Button:
            text : 'B1'
        Button:
            text : 'B2'
        Button:
            text : 'B3'
        Button:
            text : 'B4'

